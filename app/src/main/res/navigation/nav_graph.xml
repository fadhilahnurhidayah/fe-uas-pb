<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.kantinsekre.presentation.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.kantinsekre.presentation.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_productFragment"
            app:destination="@id/productFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_transactionFragment"
            app:destination="@id/transactionFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_reportFragment"
            app:destination="@id/reportFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/productFragment"
        android:name="com.example.kantinsekre.presentation.product.ProductFragment"
        android:label="Products"
        tools:layout="@layout/fragment_product" />

    <fragment
        android:id="@+id/transactionFragment"
        android:name="com.example.kantinsekre.presentation.transaction.TransactionFragment"
        android:label="Transactions"
        tools:layout="@layout/fragment_transaction" />

    <fragment
        android:id="@+id/reportFragment"
        android:name="com.example.kantinsekre.presentation.report.ReportFragment"
        android:label="Reports"
        tools:layout="@layout/fragment_report" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.kantinsekre.presentation.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_addAccountFragment"
            app:destination="@id/addAccountFragment" />
    </fragment>

    <fragment
        android:id="@+id/addAccountFragment"
        android:name="com.example.kantinsekre.presentation.settings.AddAccountFragment"
        android:label="Add Account"
        tools:layout="@layout/fragment_add_account" />

</navigation>